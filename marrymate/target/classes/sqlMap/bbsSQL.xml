<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.marry.bbs">
	<insert id="bbsWrite" parameterType="com.marry.bbs.model.BbsDTO">
		insert into
			bbs
		values(
			bbs_bidx.nextval,
			#{midx},
			#{kind},
			#{horse},
			#{subject},
			#{content},
			sysdate,
			#{img},
			0,
			0,
			0,
			0,
			0,
			0,
			0
		)
	</insert>
	<select id="bbsNotiList" resultType="com.marry.bbs.model.BbsDTO">
		select
			*
		from
			bbs
		where
			kind='공지사항'
	</select>
	<select id="bbsAfterList" resultType="com.marry.bbs.model.BbsDTO">
		select
			*
		from
			bbs
		where
			kind='웨딩후기'
	</select>
	<select id="bbsTalkList" resultType="com.marry.bbs.model.BbsDTO">
		select
			*
		from
			bbs
		where
			kind='웨딩톡톡'
	</select>
</mapper>